<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/select_task_type"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/taskRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/installDoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/install_door" />

            <RadioButton
                android:id="@+id/buildShelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/build_shelf" />

            <RadioButton
                android:id="@+id/assembleFurniture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assemble_furniture" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/select_materials"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/woodCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wood_r500" />

        <CheckBox
            android:id="@+id/nailsCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nails_r20" />

        <CheckBox
            android:id="@+id/hingesCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hinges_r30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/enter_hours"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/hoursInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/e_g_3"
            android:inputType="number"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/calculate_total" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>


